<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<div class="page-header">
  <p><a href="<%= import_orders_path %>">Import Orders</a></p>
</div>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Email</th>
      <th>Name</th>
      <th>Shopify order</th>
      <th>Order date</th>
      <th>Total</th>
      <th>Line item count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.email %></td>
        <td><%= order.name %></td>
        <td><%= order.shopify_order_id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.total %></td>
        <td><%= order.line_item_count %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

